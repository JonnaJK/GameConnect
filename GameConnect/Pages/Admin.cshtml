        <tbody>
            @foreach (var reply in Model.ReportedReplies)
            {
                <tr>
                    <td>
                        <img src="/images/@reply.ImageUrl" width="150px" height="150px" />
                    </td>
                    <td>
                        <p>@reply.Text</p>
                    </td>
                    <td>
                        <a asp-route-deleteReplyId="@reply.Id">Delete reply</a>
                    </td>
                    <td>
                        <a asp-route-restoreReplyId="@reply.Id">Restore reply</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>Currently no reported replies</h5>
}