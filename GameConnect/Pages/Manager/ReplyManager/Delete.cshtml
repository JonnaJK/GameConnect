@page
@model             DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this?</h3>
@if (Model.Reply.Replies != null && Model.Reply.Replies.Any())
{
    <h5>By deleting this reply, you also delete all related replies!</h5>
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reply.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reply.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reply.Votes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reply.Votes)
        </dd>
        @if (Model.Reply.Replies != null && Model.Reply.Replies.Any())
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reply.Replies)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reply.Replies.Count)
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reply.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
