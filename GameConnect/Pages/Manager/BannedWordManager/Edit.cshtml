@page
@using GameConnect.Domain.Services;
@using GameConnect.Domain.Entities;

@model EditModel


<h1>Edit word</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.EditBannedWord.Id" />

            <label asp-for="@Model.EditBannedWord.Title">Edited word</label>
            <input asp-for="@Model.EditBannedWord.Title" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
